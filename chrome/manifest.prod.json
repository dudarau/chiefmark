{
  "version": "0.1.0",
  "name": "karlmarks",
  "manifest_version": 2,
  "description": "Improve your Marks",
  "browser_action": {
    "default_title": "Improve your bookmarks",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/marx_small.png",
    "48": "img/marx_medium.png",
    "128": "img/marx_large.png"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "options.html",
  "permissions": [ "tabs", "storage", "bookmarks" ],
  "content_security_policy": "default-src 'self'; script-src 'self'; style-src * 'unsafe-inline'; img-src 'self' data:;"
}
